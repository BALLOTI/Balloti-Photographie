{% block subject %}
    Réinitialiser le mot de passe
{% endblock %}

{% block body %}
    {% set url = channel.hostname is not null ? 'http://' ~ channel.hostname ~ path('sylius_shop_password_reset', { 'token': user.passwordResetToken}) : url('sylius_shop_password_reset', { 'token': user.passwordResetToken}) %}
    {% autoescape %}
        <h3>Bonjour {{ user.username }}</h3>

        Pour réinitialiser votre mot de passe, veuillez suivre ce lien: <a href="{{ url|raw }}">{{ url|raw }}</a>
        <br/><br/>
        Cordialement,<br/>
        Balloti-Photographie.
    {% endautoescape %}
{% endblock %}
